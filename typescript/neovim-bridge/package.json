{
  "name": "@gc/neovim-bridge",
  "module": "src/index.ts",
  "type": "module",
  "scripts": {
    "clean": "rm -rf node_modules && rm -rf dist",
    "format": "prettier src -w",
    "lint": "eslint src --ext ts --report-unused-disable-directives --max-warnings 0",
    "dev": "bun --hot run src/index.ts",
    "build": "rm -rf dist && bun build src/index.ts --outdir dist --target node --minify --external neovim"
  },
  "devDependencies": {
    "neovim": "^4.10.1"
  }
}
